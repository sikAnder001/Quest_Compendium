<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar.Transparent" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar.Primary" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar.Secondary">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Layouts -->
    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--<item name="android:background">@color/colorBackground</item>-->

    <style name="NormalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NormalRippleLayout" parent="FlatWaveColorButtonRippleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--toolbar-->
    <style name="ToolBar78">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="TvToolBarTitle78" parent="TvStandard">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_text</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_small</item>

    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!-- TextView -->
    <style name="TvStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_standard</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/optima_medium</item>
        <item name="android:lineSpacingExtra">@dimen/_5sdp</item>
    </style>

    <style name="TvSmall" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TvXSmall" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_xSmall</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TvDxSmall" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_dxSmall</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TvLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TvXLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_xLarge</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TvDxLarge" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_dxLarge</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TvRippleCommon" parent="TvRippleStandard">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="TvRippleStandard" parent="FlatWaveColorButtonRippleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_standard</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/optima_medium</item>
        <item name="android:lineSpacingExtra">@dimen/_5sdp</item>
    </style>

    <style name="TvRippleSmall" parent="TvRippleStandard">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingLeft">@dimen/padding_mini</item>
        <item name="android:paddingRight">@dimen/padding_mini</item>
        <item name="android:paddingTop">@dimen/padding_mini</item>
        <item name="android:paddingBottom">@dimen/padding_mini</item>
    </style>

    <style name="TvSplash" parent="TvStandard">
        <item name="android:textSize">@dimen/txt_splash</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IbStandard" parent="FlatWaveColorButtonRippleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/padding_ib</item>
        <item name="android:paddingTop">@dimen/padding_ib</item>
        <item name="android:paddingRight">@dimen/padding_ib</item>
        <item name="android:paddingBottom">@dimen/padding_ib</item>
    </style>

    <style name="IbToolBarBack78" parent="IbStandard">
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:paddingBottom">@dimen/padding_nano</item>
        <item name="android:paddingTop">@dimen/padding_micro</item>-->
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <!--Button Style-->
    <style name="RippleBtnStandard" parent="FlatWaveColorButtonRippleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BtnSmall" parent="RippleBtnStandard">
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_nano</item>
    </style>

    <style name="RecycleView78">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:saveEnabled">false</item>
    </style>

    <style name="FlatWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="rd_rippleColor">#11000000</item>
        <item name="rd_cornerRadius">9dp</item>
        <item name="rd_delayClick">200</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VerticalView">
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HorizontalView">
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="etStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/txt_standard</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">
            @style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/optima_medium</item>
    </style>

</resources>
